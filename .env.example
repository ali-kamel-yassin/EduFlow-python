# Sajjaly Pro Environment Configuration
# Copy this file to .env for local development
# Set these variables in your hosting platform dashboard

# =============================================================================
# REQUIRED PRODUCTION SETTINGS
# =============================================================================

# Environment (CRITICAL: Must be 'production' for hosting platforms)
NODE_ENV=development

# Server Configuration
PORT=1111

# Security (CRITICAL: Generate a secure random string for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_super_secret_key_change_in_production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=school_db
MYSQL_PORT=3306

# SQLite/PostgreSQL are no longer supported in this version.

# =============================================================================
# HOSTING PLATFORM DETECTION (Auto-detected)
# =============================================================================

# These are automatically set by hosting platforms - don't set manually
# RENDER=true              # Auto-set by Render.com
# RAILWAY_ENVIRONMENT=true # Auto-set by Railway.app  
# VERCEL=true              # Auto-set by Vercel.com

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Timezone (Optional - defaults to system timezone)
TZ=Asia/Baghdad

# =============================================================================
# HOSTING PLATFORM EXAMPLES
# =============================================================================

# FOR RENDER.COM:
# NODE_ENV=production
# DATABASE_URL=postgresql://username:password@hostname:5432/database
# JWT_SECRET=your_32_character_random_string_here
# TZ=Asia/Baghdad

# FOR RAILWAY.APP:
# NODE_ENV=production  
# DATABASE_URL=postgresql://username:password@hostname:5432/database
# JWT_SECRET=your_32_character_random_string_here

# FOR VERCEL.COM:
# NODE_ENV=production
# DATABASE_URL=postgresql://username:password@hostname:5432/database  
# JWT_SECRET=your_32_character_random_string_here

# =============================================================================
# SUPABASE DATABASE EXAMPLE
# =============================================================================
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

